<%- include("templates/header") %>
  <link rel="stylesheet" href="/css/authentication.css">
  <link rel="stylesheet" href="/css/signup_profile.css">

  </head>

  <body>
    <!--GPT_Prompt_1-->
    <!--This form is mainly generaged by ChatGPT-->
    <div class="auth-form-container">
      <h2>Set Nutritional Goal</h2>
      <form id="profile-form" method="post" action="/onboarding_goal" class="form">
        <div id="sex">
          Sex:
          <label>
            <input type="radio" name="sex" value="female" style="display: inline;" required />Female
          </label>
          <label>
            <input type="radio" name="sex" value="male" style="display: inline;"/>Male
          </label>
        </div>
        <br>
        <label for="height"></label>
        <input type="number" id="height" name="height" placeholder="Height (in cm)" required>
        <label for="weight"></label>
        <input type="number" id="weight" name="weight" placeholder="Weight (in kg)" required>
        <label class="select_label" for="activity">
          <select class="questionIndex" id="activity" name="activity" required>
            <option value="" selected disabled hidden>Choose activity level</option>
            <option value="sedentary">Sedentary (little or no exercise)</option>
            <option value="lightly-active">Lightly active (light exercise/sports 1-3 days/week)</option>
            <option value="moderately-active">Moderately active (moderate exercise/sports 3-5 days/week)</option>
            <option value="very-active">Very active (hard exercise/sports 6-7 days a week)</option>
            <option value="super-active">Super active (very hard exercise/sports, physical job or training)</option>
          </select>
        </label>
        <label class="select_label" for="goal">
          <select class="questionIndex" id="goal" name="goal" required>
            <option value="" selected disabled hidden>Choose goal</option>
            <option value="lose-weight">Lose weight</option>
            <option value="maintain-weight">Maintain weight</option>
            <option value="gain-muscle">Gain muscle</option>
          </select>
        </label>
        <button type="submit" id="calculate-btn" class="submit-btn">CALCULATE</button>
      </form>
    </div>

    <script>
    $("#profile-form").submit(function(event) {
    event.preventDefault(); // Prevent form from submitting normally

    var selectedSex = $("input[name='sex']:checked").val();

    if (!selectedSex) {
      $("#sex-error").text("Please select a sex").show();
    } else {
      // Valid form, proceed with submission
      this.submit();
    }
    });

    </script>
    <%- include("templates/footer") %>