<link rel="stylesheet" href="/css/mytray.css">

</head>

<body>
<header>
  <h1>My Tray</h1>
</header>

<main>
  <% tray.forEach(function(item) { %>
  <div class="card">
    <img src="<%= item.image %>" alt="<%= item.name %>" />
    <div class="item-details">
      <h2><%= item.item %></h2>
      <p>
        <small><strong>Calories:</strong> <%= item.calories %>Cals</small>
      </p>
      <p>
        <small><strong>Protein:</strong> <%= item.protein %>g</small>
      </p>
      <p>
        <small><strong>Fat:</strong> <%= item.total_fat %>g</small>
      </p>
    </div>
    <button class="remove-btn" onclick="removeFromTray(<%= JSON.stringify(item) %>)">Remove</button>
  </div>
  <% }); %>
</main>

